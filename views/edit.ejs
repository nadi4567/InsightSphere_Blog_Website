<%- include("partials/header.ejs") %>

   <!--body section-->
    <div class="postDisplay">
        <p id="createTle">Create Your Content</p>
        <form class="postForm" action="/posts/<%= post.postId %>" method="POST">
          <div class="lblIptContainer">
             <label for="title">Title</label>
             <input name="title" required value="<%= post.title %>">
          </div>
          
          <div  class="lblIptContainer">
             <label for="access">Access code</label>
            <input name="accessCode" required type="number" value="<%= post.accessCode %>">
          </div>
          <div  class="lblIptContainer">
             <label for="author">Author</label>
            <input name="author" required value="<%= post.author %>">
          </div>
          <div  class="lblIptContainer">
             <label for="content" >Content</label>
             <textarea required rows="2" cols="50" name="content" required class="contentBox"><%= post.content %></textarea>
          </div>
          <input type="submit" class="submitBtn">
        </form>
     </div>
<%- include("partials/footer.ejs") %>
