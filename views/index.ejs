<%- include("partials/header.ejs") %>
    <!--body section-->
    <div class="postDisplay">
      <% if (posts.length>0) { %>
        <% posts.forEach(post => { %>
        <div class="postContainer">
          <div class="postTitle"><%= post.title %></div>
          <div class="postDate"><%= post.date%></div>
          <div class="postContent">
            <% if (post.content) { %>
                <%= post.content.substring(0, 160) + "..." %>
            <% } else { %>
                No content available.
            <% } %>
        </div>
        
        
          <div class="postBtnContainer">
            <div class="author"><%= post.author  %></div>
            <a class="seeMore" href="/posts/<%= post.postId %>">see more</a>
         </div>
        </div>
        <% }) %>
      <% } else{%>
        <div class="noContentContainer">
          <p class="noContent"> There is no content here yet! Create your own content üìù</p>
        </div>
        <% } %>
